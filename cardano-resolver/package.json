{
  "name": "@1inch/cardano-resolver",
  "version": "1.0.0",
  "description": "Cardano resolver for 1inch cross-chain swaps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "deploy:testnet": "npm run build && node scripts/deploy-testnet.js",
    "deploy:mainnet": "npm run build && node scripts/deploy-mainnet.js",
    "monitor": "node dist/monitor.js",
    "resolve": "node dist/resolve.js"
  },
  "keywords": [
    "1inch",
    "cardano",
    "cross-chain",
    "atomic-swap",
    "defi",
    "resolver"
  ],
  "author": "1inch Network",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@1inch/cross-chain-sdk": "^0.1.15",
    "@1inch/byte-utils": "^2.6.0",
    "@harmoniclabs/plu-ts": "^0.7.0",
    "ethers": "^6.13.0",
    "dotenv": "^16.4.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  }
}